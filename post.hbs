{{!< default}}

<section class="container bg-gray-200 py-8">
    {{#post}}
    <article class="text-xl 2xl:text-2xl m-3">
        <img src="{{feature_image}}" alt="thumbnail" class="w-full px-3 md:px-0 md:w-4/6 xl:w-3/12">
        <h3 class="text-center font-medium pt-3 text-2xl 2xl:text-3xl">{{title}}</h3>
        <p class="h-full text-center text-md pb-3 text-md 2xl:text-xl">
            {{date}} - {{authors}}
        </p>
        <div class="post-container">
            {{content}}
        </div>
    </article>
    {{/post}}
</section>
